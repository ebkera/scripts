#!/bin/bash

file_name="md_moves.era"
mes="Logging all Total MD forces per MD step"

echo $mes > ${file_name}
echo $mes

for f in */ ; do
  cd $f
  echo "Now looking in $f"
  echo "Now looking in $f" >> ../${file_name}
  var=$(grep "Atomic forces" *out)
  echo "$var" >> ../${file_name}
  echo "$var"
  cd ..
done

echo "Find the file ./${file_name}"
